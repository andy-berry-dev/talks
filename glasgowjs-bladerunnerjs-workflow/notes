cp -r ../../helloinput ../apps/demoApp/demo-bladeset/blades/


	var PresenterComponent = require( 'br/presenter/component/PresenterComponent' );

	var HelloWorldModel = require( 'demoapp/demo/helloworld/ExamplePresentationModel' );
	var helloWorldBlade = new PresenterComponent("demoapp.demo.helloworld.view-template", new HelloWorldModel());
	document.body.appendChild(helloWorldBlade.getElement());

	var HelloWorldInputModel = require( 'demoapp/demo/helloinput/ExamplePresentationModel' );
	var helloWorldInputBlade = new PresenterComponent("demoapp.demo.helloinput.view-template", new HelloWorldInputModel());
	document.body.appendChild(helloWorldInputBlade.getElement());


